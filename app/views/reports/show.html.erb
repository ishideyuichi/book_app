<h2><%= t('report show')%></h2>
<p>
  <strong><%= t('title') %>:</strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= t('body') %>:</strong>
  <%= @report.body %>
</p>

<%= render 'comments/index', commentable: @report %>
<%= render 'comments/form', comment: @report.comments.new, button_name: "コメントする" %>

<% if @report.user == current_user %>
<%= link_to t('edit'), edit_report_path(@report) %> |
<% end %>
<%= link_to t('back'), reports_path %>
